<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/expandable_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:visibility="gone"
        android:paddingBottom="@dimen/padding_complaint_select"
        android:paddingTop="@dimen/padding_complaint_select"
        android:textSize="@dimen/text_size_complaint" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_weight="0.40"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/radio_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generic_yes"
            android:textSize="18sp" />

        <RadioButton android:id="@+id/radio_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generic_no"
            android:textSize="18sp" />

    </RadioGroup>

</LinearLayout>