                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_toStartOf="@+id/edit_button"
                            android:src="@drawable/ic_prescription_gray"
                            android:visibility="gone" />
                    </LinearLayout>


