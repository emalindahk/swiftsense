<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="120dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

    <ImageView
        android:id="@+id/ayu_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_ayu_logo_svg"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_intro_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_n_n_i_m_ayu_a_digital_health_assistant_let_s_get_started_normal_Screen"
        android:layout_below="@id/ayu_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="18sp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="44dp"
        android:lineSpacingExtra="2sp"
        android:gravity="center_horizontal|top" />

        <Button
            android:id="@+id/button_demo_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:elevation="5dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/demo_version"
            android:layout_below="@id/tv_intro_two"
            android:layout_marginTop="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:includeFontPadding="true"
            android:background="@drawable/ic_rectangle_76" />

