<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:foreground="?android:attr/selectableItemBackground">

    <View
        android:layout_width="fill_parent"
        android:background="@color/divider"
        android:layout_gravity="bottom"
        android:layout_height="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/document_photo_ImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_action_folder_open"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/document_name_TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/planet_name"
            android:includeFontPadding="false"
            android:fontFamily="@font/lato_regular"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/document_delete_button_ImageView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_delete"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            android:padding="15dp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>